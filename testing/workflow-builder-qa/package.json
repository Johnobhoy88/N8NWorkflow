{
  "name": "workflow-builder-qa-test-suite",
  "version": "1.0.0",
  "description": "Comprehensive integration testing suite for n8n Workflow Builder",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "jest tests/e2e --coverage --runInBand",
    "test:security": "jest tests/security --coverage",
    "test:performance": "jest tests/performance --coverage --runInBand",
    "test:load": "k6 run load-tests/load-test.js",
    "test:load:stress": "k6 run load-tests/stress-test.js",
    "test:all": "npm run test && npm run test:load",
    "coverage": "jest --coverage --coverageReporters=html text lcov",
    "coverage:view": "open coverage/lcov-report/index.html",
    "lint": "eslint tests/**/*.js",
    "lint:fix": "eslint tests/**/*.js --fix"
  },
  "keywords": [
    "n8n",
    "workflow",
    "testing",
    "integration",
    "qa"
  ],
  "author": "QA Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "axios": "^1.6.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nock": "^13.4.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "faker": "^5.5.3",
    "jsonschema": "^1.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/**/*.spec.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "reports",
          "outputName": "junit.xml"
        }
      ]
    ]
  }
}
